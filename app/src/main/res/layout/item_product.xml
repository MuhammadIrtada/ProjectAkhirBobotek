<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivBgProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kotak" />

    <TextView
        android:id="@+id/cart_tv_kuantitas"
        android:layout_width="10dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cart_ic_min"
        app:layout_constraintStart_toEndOf="@+id/cart_ic_min"
        app:layout_constraintTop_toTopOf="@+id/cart_ic_min" />

    <TextView
        android:id="@+id/cart_tv_namaObat"
        android:layout_width="145dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Betadine Antiseptic"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toEndOf="@+id/ivBgProduct"
        app:layout_constraintTop_toTopOf="@+id/ivBgProduct" />

    <TextView
        android:id="@+id/cart_tv_harga"
        android:layout_width="108dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Rp 6.100"
        app:layout_constraintStart_toStartOf="@+id/cart_tv_namaObat"
        app:layout_constraintTop_toBottomOf="@+id/cart_tv_namaObat" />

    <ImageButton
        android:id="@+id/cart_ic_min"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cart_tv_harga"
        app:layout_constraintTop_toBottomOf="@+id/cart_tv_harga"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/buttonmin" />

    <ImageButton
        android:id="@+id/cart_ic_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/buttondelete" />

    <ImageButton
        android:id="@+id/cart_ic_plus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/cart_tv_kuantitas"
        app:layout_constraintTop_toBottomOf="@+id/cart_tv_harga"
        app:srcCompat="@drawable/buttonplus" />

    <ImageView
        android:id="@+id/ivProductPict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivBgProduct"
        app:layout_constraintEnd_toEndOf="@+id/ivBgProduct"
        app:layout_constraintStart_toStartOf="@+id/ivBgProduct"
        app:layout_constraintTop_toTopOf="@+id/ivBgProduct"
        app:srcCompat="@drawable/betadine" />

</androidx.constraintlayout.widget.ConstraintLayout>