<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivBgProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/kotak" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="10dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/ibPlusBtn"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/ivMinBtn"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="145dp"
        android:layout_height="19dp"
        android:fontFamily="@font/montserrat"
        android:text="Betadine Antiseptic"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPrice"
        app:layout_constraintStart_toStartOf="@+id/tvPrice" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat"
        android:text="Rp 6.100"
        app:layout_constraintBottom_toBottomOf="@+id/ibDeleteBtn"
        app:layout_constraintStart_toEndOf="@+id/ivBgProduct"
        app:layout_constraintTop_toTopOf="@+id/ibDeleteBtn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ivMinBtn"
        android:layout_width="26dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/buttonmin" />

    <ImageButton
        android:id="@+id/ibDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485"
        app:srcCompat="@drawable/buttondelete" />

    <ImageButton
        android:id="@+id/ibPlusBtn"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_marginEnd="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibDeleteBtn"
        app:srcCompat="@drawable/buttonplus" />

    <ImageView
        android:id="@+id/ivProductPict"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivBgProduct"
        app:layout_constraintEnd_toEndOf="@+id/ivBgProduct"
        app:layout_constraintStart_toStartOf="@+id/ivBgProduct"
        app:layout_constraintTop_toTopOf="@+id/ivBgProduct"
        app:srcCompat="@drawable/betadine" />

</androidx.constraintlayout.widget.ConstraintLayout>