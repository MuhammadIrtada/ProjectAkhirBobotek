<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FF"
    android:outlineProvider="paddedBounds">

    <TextView
        android:id="@+id/tvTitleTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Top Up"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toEndOf="@+id/tu_bt_back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tu_btn_topUp"
        android:layout_width="319dp"
        android:layout_height="53dp"
        android:background="@drawable/bg_btn_ungu"
        android:fontFamily="@font/montserrat_bold"
        android:text="T O P    U P"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <ImageButton
        android:id="@+id/tu_bt_back"
        android:layout_width="34dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleTopUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitleTopUp"
        app:srcCompat="@drawable/backungu" />

    <ImageView
        android:id="@+id/ivTopUp"
        android:layout_width="195dp"
        android:layout_height="163dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleTopUp"
        app:srcCompat="@drawable/doketer" />

    <TextView
        android:id="@+id/tvAccPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Acount Phone Number"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tu_et_phone"
        app:layout_constraintTop_toBottomOf="@+id/ivTopUp" />

    <TextView
        android:id="@+id/tvAmountTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Enter Amount"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tu_et_phone"
        app:layout_constraintTop_toBottomOf="@+id/tu_et_phone" />

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Instruction"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tu_et_amount"
        app:layout_constraintTop_toBottomOf="@+id/tu_et_amount" />

    <TextView
        android:id="@+id/tvInstructionDetail"
        android:layout_width="350dp"
        android:layout_height="69dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/instruction"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvInstruction"
        app:layout_constraintTop_toBottomOf="@+id/tvInstruction" />

    <EditText
        android:id="@+id/tu_et_phone"
        android:layout_width="319dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="+62"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccPhoneNum" />

    <EditText
        android:id="@+id/tu_et_amount"
        android:layout_width="319dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/tvAmountTopUp"
        app:layout_constraintTop_toBottomOf="@+id/tvAmountTopUp" />

</androidx.constraintlayout.widget.ConstraintLayout>